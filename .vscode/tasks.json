{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build with OpenMP",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-fopenmp",          // enable OpenMP
                "-o", "main.exe",    // output file
                "main.c"             // input source
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        }
    ]
}